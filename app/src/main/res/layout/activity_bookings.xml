<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ebfff9"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:clipToOutline="true"
            android:elevation="2dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#339989"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment Form"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Form Fields -->
            <EditText
                android:id="@+id/etPatientName"
                android:hint="Full Name Of Patient"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPersonName"
                android:backgroundTint="#a9a3e0"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etAddress"
                android:hint="Address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPostalAddress"
                android:layout_marginTop="8dp"
                android:backgroundTint="#a9a3e0" />

            <EditText
                android:id="@+id/etMedicalAid"
                android:hint="Medical Aid"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="text"
                android:layout_marginTop="8dp"
                android:backgroundTint="#a9a3e0" />

            <EditText
                android:id="@+id/etGuarantor"
                android:hint="Full Name Of Guarantor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPersonName"
                android:layout_marginTop="8dp"
                android:backgroundTint="#a9a3e0" />

            <Spinner
                android:id="@+id/otSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:spinnerMode="dropdown"
                android:prompt="@string/ot_prompt"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/appointmentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Date"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:drawableEnd="@android:drawable/ic_menu_today"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I accept the terms"
                android:layout_marginTop="12dp"
                android:textColor="#2e4057" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read our T and Cs"
                android:textSize="12sp"
                android:textColor="#49416d"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:backgroundTint="#339989"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemIconSize="38dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
